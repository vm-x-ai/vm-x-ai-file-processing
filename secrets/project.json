{
  "name": "infra-secrets",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "secrets/src",
  "projectType": "library",
  "tags": ["secrets", "infra"],
  "// targets": "to see all targets run: nx show project infra-secrets --web",
  "targets": {
    "cdk-bootstrap": {},
    "cdk-deploy": {},
    "deploy-secrets": {
      "executor": "nx:run-commands",
      "options": {
        "command": "aws-secrets deploy -e {args.env}.yaml",
        "cwd": "{projectRoot}/secrets"
      },
      "configurations": {
        "dev": {
          "args": "--env dev"
        },
        "prd": {
          "args": "--env prd"
        },
        "shared": {
          "args": "--env shared"
        }
      }
    },
    "deploy": {
      "executor": "@vmxfp/workspace-plugins:proxy-executor",
      "options": {
        "target": "deploy-secrets"
      },
      "dependsOn": ["^build", "cdk-deploy"]
    },
    "encrypt": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "aws-secrets encrypt -e {args.env}.yaml",
          "cd ../..; npx nx format:write --files {projectRoot}/secrets/{args.env}.yaml,{projectRoot}/secrets/_encrypted/{args.env}.yaml"
        ],
        "parallel": false,
        "cwd": "{projectRoot}/secrets"
      },
      "configurations": {
        "dev": {
          "args": "--env dev"
        },
        "prod": {
          "args": "--env prod"
        }
      }
    }
  }
}
