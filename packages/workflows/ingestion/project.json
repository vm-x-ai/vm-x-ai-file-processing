{
  "name": "workflow-ingestion",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/workflows/ingestion/ingestion_workflow",
  "targets": {
    "cdk-bootstrap": {},
    "cdk-deploy": {
      "dependsOn": ["lambda-package-dependencies", "lambda-package-project"]
    },
    "lock": {
      "executor": "@nxlv/python:lock",
      "options": {
        "update": false
      }
    },
    "sync": {
      "executor": "@nxlv/python:sync",
      "options": {}
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      },
      "cache": true
    },
    "lint": {
      "executor": "@nxlv/python:ruff-check",
      "outputs": [],
      "options": {
        "lintFilePatterns": ["ingestion_workflow", "tests"]
      },
      "cache": true
    },
    "format": {
      "executor": "@nxlv/python:ruff-format",
      "outputs": [],
      "options": {
        "filePatterns": ["ingestion_workflow", "tests"]
      },
      "cache": true
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/{projectRoot}/unittests",
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "command": "uv run pytest tests/",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "verbose": false,
        "debug": false
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "watchmedo auto-restart --patterns=\"*.py\" --recursive -- python -m ingestion_workflow",
        "cwd": "{projectRoot}"
      }
    },
    "docker-build": {},
    "docker-push": {},
    "helm-deploy": {},
    "update-image-tag": {},
    "deploy": {
      "executor": "@workspace/workspace-plugins:proxy-executor",
      "options": {
        "target": "cdk-deploy"
      },
      "dependsOn": [
        "^build",
        {
          "projects": "workflow-worker",
          "target": "deploy",
          "params": "forward"
        }
      ]
    },
    "lambda-package-dependencies": {
      "options": {
        "extras": ["aws_lambda"]
      }
    },
    "lambda-package-project": {}
  },
  "tags": [
    "workflow",
    "temporal",
    "python",
    "no-deploy:shared",
    "local-workflow-infra",
    "support:serverless"
  ],
  "release": {
    "version": {
      "versionActions": "@nxlv/python/src/release/version-actions"
    }
  }
}
