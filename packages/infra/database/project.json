{
  "name": "infra-database",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/infra/database/src",
  "projectType": "library",
  "tags": ["infra", "typescript", "no-deploy:shared"],
  "// targets": "to see all targets run: nx show project infra-database --web",
  "targets": {
    "cdk-bootstrap": {},
    "cdk-deploy": {},
    "deploy": {
      "executor": "@vmxfp/workspace-plugins:proxy-executor",
      "options": {
        "target": "cdk-deploy"
      },
      "dependsOn": [
        "^build",
        {
          "projects": "infra-network",
          "target": "deploy",
          "params": "forward"
        },
        {
          "projects": "infra-eks",
          "target": "deploy",
          "params": "forward"
        }
      ]
    }
  }
}
