{
  "name": "api",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/apps/api/api",
  "targets": {
    "cdk-bootstrap": {},
    "cdk-deploy": {
      "dependsOn": ["lambda-package-dependencies", "lambda-package-project"]
    },
    "docker-compose-up": {},
    "lock": {
      "executor": "@nxlv/python:lock",
      "options": {
        "update": false
      }
    },
    "sync": {
      "executor": "@nxlv/python:sync",
      "options": {}
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true,
        "ignorePaths": [
          "**/__pycache__/**/*",
          ".*",
          "dist",
          "tests",
          "node_modules",
          "cdk.out",
          "infra",
          "argocd",
          "*.json",
          "Dockerfile"
        ]
      },
      "cache": true
    },
    "lambda-package-dependencies": {},
    "lambda-package-project": {},
    "lint": {
      "executor": "@nxlv/python:ruff-check",
      "outputs": [],
      "options": {
        "lintFilePatterns": ["api", "tests"]
      },
      "cache": true
    },
    "format": {
      "executor": "@nxlv/python:ruff-format",
      "outputs": [],
      "options": {
        "filePatterns": ["api", "tests"]
      },
      "cache": true
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/{projectRoot}/unittests",
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "command": "uv run pytest tests/",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "verbose": false,
        "debug": false
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nxlv/python:run-commands",
      "options": {
        "command": "python -m api",
        "cwd": "{projectRoot}"
      }
    },
    "docker-build": {},
    "docker-push": {},
    "helm-deploy": {},
    "update-image-tag": {},
    "deploy": {
      "executor": "@workspace/workspace-plugins:proxy-executor",
      "options": {
        "target": "cdk-deploy"
      },
      "dependsOn": [
        "^build",
        {
          "projects": "infra-database",
          "target": "deploy",
          "params": "forward"
        },
        {
          "projects": "infra-eks",
          "target": "deploy",
          "params": "forward"
        }
      ]
    }
  },
  "tags": ["api", "no-deploy:shared", "support:serverless"],
  "release": {
    "version": {
      "versionActions": "@nxlv/python/src/release/version-actions"
    }
  }
}
